<?xml version="1.0" encoding="UTF-8"?>
<project name="mtwilson" default="build" basedir=".">
	<description>
	Run "ant ready" to ensure you have all pre-requisites to build
	Run "ant" or "ant build" to build the entire project
	Run "ant dist" to also build javadocs and other packaging
	Run "ant post" to publish the files to a shared server
	</description>
	
	<target name="info">
		<echoproperties/>
	</target>
	
	<target name="init">
		<condition property="cmd.maven" value="mvn.bat">
			<os family="windows"/>
		</condition>
		<condition property="cmd.maven" value="mvn">
			<os family="unix"/>
		</condition>
	</target>
	
	<target name="ready" depends="init">
		<!-- the root pom -->
		<exec executable="${cmd.maven}">
			<arg value="-DskipTests=true"/>
			<arg value="-N"/>
			<arg value="install"/>
		</exec>
		<!-- the maven archetypes depend on root pom -->
		<exec executable="${cmd.maven}" dir="maven">
			<arg value="-DskipTests=true"/>
			<arg value="install"/>
		</exec>
		<!-- clean all projects -->
		<exec executable="${cmd.maven}">
			<arg value="-DskipTests=true"/>
			<arg value="clean"/>
		</exec>
	</target>
	
	<target name="build" depends="init">
		<!-- the root pom and all projects -->
		<exec executable="${cmd.maven}">
			<arg value="-DskipTests=true"/>
			<arg value="install"/>
		</exec>
	</target>

	<target name="dist" depends="init">
		<!-- the root pom and all projects -->
		<exec executable="${cmd.maven}">
			<arg value="-DskipTests=true"/>
			<arg value="clean"/>
			<arg value="install"/>
		</exec>
	</target>

	<target name="post" depends="init">
		<!-- the root pom and all projects -->
		<!-- TODO: this needs to be refined so only 
			 the mtwilson-server, trust-director,
			 trust-agent, etc. deliverables are shared...
			 not every single artifact -->
		<exec executable="${cmd.maven}">
			<arg value="-DskipTests=true"/>
			<arg value="deploy"/>
		</exec>
	</target>
	
</project>