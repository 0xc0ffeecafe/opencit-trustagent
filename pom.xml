                        <version>0.1-SNAPSHOT</version>
                    </dependency>
                </dependencies>
                -->
            </plugin>                
            </reportPlugins>
        </configuration>  
    </plugin>
                <!-- end website plugin -->
	</plugins>

	<extensions>
