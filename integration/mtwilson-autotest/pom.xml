<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mtwilson-autotest</artifactId>
  <packaging>jar</packaging>
  <name>Mt Wilson Automatic Test Suite</name>
  <description>
  Automated test suite for Mt Wilson installation including:
    web services (via api client), 
	web services security (via custom security testing client),
	database integrity (directly via JPA - but maybe move this into a web service API that requires admin permissions).
  Command-line interface.
  Environment to test is defined in local file(s)
  TODO: add ability to download environment definition from a URL for testing (do not save it, just use it for the current tests)
  </description>
  
    <parent>
		<groupId>com.intel.mtwilson.integration</groupId>
		<artifactId>mtwilson-integration</artifactId>
		<version>1.2-SNAPSHOT</version>
    </parent>


    <build>
		<plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <inherited>true</inherited>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.5</version>
        <executions>
            <execution>
                <id>mtwilson-autotest</id>
                <phase>package</phase>
                <goals><goal>shade</goal></goals>
                <configuration>
        		<shadedArtifactAttached>true</shadedArtifactAttached>
                	<shadedClassifierName>with-dependencies</shadedClassifierName>
                        <transformers>
                          <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <manifestEntries>
                                <Main-Class>com.intel.mtwilson.autotest.Main</Main-Class>
                            </manifestEntries>
                          </transformer>
                        </transformers>
                </configuration>
            </execution>
            </executions>
      </plugin>
                
                      
        </plugins>
    </build>


