<xs:schema attributeFormDefault="unqualified" 
           elementFormDefault="qualified" 
           targetNamespace="mtwilson:trustdirector:policy:1.1" 
           xmlns="mtwilson:trustdirector:policy:1.1"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:ds="http://www.w3.org/2000/09/xmldsig#">
           <xs:import namespace="http://www.w3.org/2000/09/xmldsig#"
				schemaLocation="xmldsig-core-schema.xsd"/>    

    <xs:element name="TrustPolicy" type="trustPolicyType"/>
    <xs:complexType name="trustPolicyType">
      <xs:sequence>
        <xs:element ref="Director"/>
        <xs:element ref="Image"  minOccurs="0"/>
        <xs:element ref="LaunchControlPolicy" minOccurs="0"/>        
        <xs:element ref="Encryption" minOccurs="0"/>
        <xs:element ref="Geotag" minOccurs="0"/>          
        <xs:element ref="Whitelist"/>
        <xs:element ref="ds:Signature" minOccurs="0"/>	
      </xs:sequence>
    </xs:complexType>
  
    <xs:element name="Director" type="directorType"/>
    <xs:complexType name="directorType">
      <xs:sequence>
        <xs:element type="xs:string" name="CustomerId"/>
      </xs:sequence>
    </xs:complexType>
    
    <xs:element name="Image" type="imageType"/>
    <xs:complexType name="imageType">
        <xs:sequence>
          <xs:element name="ImageId" type="uuidType"/>
          <xs:element name="ImageHash" type="digestAlgorithmType"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:element name="LaunchControlPolicy" type="launchControlPolicyType"/>
    <xs:simpleType name="launchControlPolicyType">
        <xs:restriction base="xs:string">
          <xs:enumeration value="MeasureOnly"/>
          <xs:enumeration value="MeasureAndEnforce"/>
        </xs:restriction>
    </xs:simpleType>
    
    <xs:element name="Encryption" type="encryptionType"/>
    <xs:complexType name="encryptionType">
        <xs:sequence>
            <xs:element name="Key" type="keyType"/>
            <xs:element name="Checksum" type="digestAlgorithmType"/>
        </xs:sequence>
    </xs:complexType>
        
    <xs:element name="Geotag" type="geoTagType"/>          
    <xs:complexType name="geoTagType">
      <xs:sequence>
        <xs:element name="Attribute" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="Text"/>
            </xs:sequence>
            <xs:attribute type="xs:string" name="Oid" use="optional"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
    
    <xs:element name="Whitelist" type="whitelistType"/>
    <xs:complexType name="whitelistType">
      <xs:sequence>
            <xs:choice minOccurs="0" maxOccurs="unbounded">
                    <xs:element name="File" type="fileMeasurementType"/>
                    <xs:element name="Dir" type="directoryMeasurementType"/>
            </xs:choice>
      </xs:sequence>
      <xs:attribute type="xs:string" name="DigestAlg"/>
    </xs:complexType>    
    
    <xs:complexType name="digestAlgorithmType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="DigestAlg"/>                        
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:complexType name="measurementType" abstract="true">
        <xs:simpleContent>
        <xs:extension base="xs:string">
            <xs:attribute type="xs:string" name="Path" use="required"/>
        </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="fileMeasurementType">
        <xs:simpleContent>
            <xs:extension base="measurementType"/>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="directoryMeasurementType">
        <xs:simpleContent>
            <xs:extension base="measurementType">
                <xs:attribute type="xs:string" name="Include" use="optional"/>
                <xs:attribute type="xs:string" name="Exclude" use="optional"/>                      
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:complexType name="keyType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="URL"/>                        
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:simpleType name="uuidType">
        <xs:restriction base="xs:string">
            <xs:length value="36" fixed="true" />
            <xs:pattern value="[0-9a-fA-F]{8}(-[0-9a-fA-F]{4}){3}-[0-9a-fA-F]{12}"/>
        </xs:restriction>
    </xs:simpleType>
    
</xs:schema>
