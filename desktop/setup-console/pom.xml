        <profile>
            <activation>
                <property>
                    <name>aspectj</name>
                </property>
            </activation>
            <build>
                <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>aspectj-maven-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>       <!-- use this goal to weave all your main classes -->
              <goal>test-compile</goal>  <!-- use this goal to weave all your test classes -->
            </goals>
            <configuration>
                <source>1.6</source>
                <target>1.6</target>
                <!-- aspect libraries are the already-compiled aspect .jars -->
                <aspectLibraries>
                    <aspectLibrary>
                        <groupId>com.intel.mtwilson.common</groupId>
                        <artifactId>mtwilson-validation</artifactId>
                    </aspectLibrary>
                </aspectLibraries>
                <!-- weave dependencies are regular java dependencies (declared in the dependencies section of this pom) into which we want to weave the same aspects that are weaved into this project -->
