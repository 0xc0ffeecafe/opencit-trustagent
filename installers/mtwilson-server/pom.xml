<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mtwilson-server</artifactId>

  <packaging>pom</packaging>
  <name>Mt Wilson Server Linux Installer</name>
  <description>Installs MySQL, Java, Glassfish, Web Services, and UI Portals</description>

    <parent>
        <groupId>com.intel.mtwilson.linux</groupId>
        <artifactId>mtwilson-linux</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>
  
  <properties>
    <makeself.directory>${project.build.directory}/${project.artifactId}-${project.version}</makeself.directory>
  </properties>
 
 <!-- these dependencies are only for including the api client, they are not needed for the core shell script functions. the maven-dependency-plugin copies these dependencies and all their dependencies into a folder for distribution -->
  <dependencies>
    <!-- Java and Glassfish -->
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>java</artifactId>
      <version>1.6.0_29</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>glassfish</artifactId>
      <version>3.1.1</version>
      <type>bin</type>
    </dependency>
    <!-- Monit -->
    <dependency>
        <groupId>com.intel.mtwilson.linux</groupId>
        <artifactId>monit</artifactId>
        <version>5.5</version>
        <type>bin</type>
    </dependency>
    
 <!-- these dependencies are only for including the api client, they are not needed for the core shell script functions. the maven-dependency-plugin copies these dependencies and all their dependencies into a folder for distribution -->
    <dependency>
      <groupId>com.intel.mtwilson.integration</groupId>
      <artifactId>api-client</artifactId>
      <version>${project.parent.version}</version>
      <type>jar</type>
      <!--<classifier>with-dependencies</classifier>-->
    </dependency>
    
 <!-- this is the setup console -->
    <dependency>
      <groupId>com.intel.mtwilson.desktop</groupId>
      <artifactId>setup-console</artifactId>
      <version>${project.parent.version}</version>
      <type>jar</type>
      <classifier>with-dependencies</classifier>
    </dependency>
    
    <!-- Web Services -->
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>PrivacyCAService</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>ManagementService</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>WLMService</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>AttestationService</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    
    <!-- UI Portals -->
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>WhiteListPortal</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>ManagementConsole</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>
    <dependency>
      <groupId>com.intel.mtwilson.linux</groupId>
      <artifactId>TrustDashBoard</artifactId>
      <version>${project.version}</version>
      <type>bin</type>
    </dependency>

     <!-- API Client and Linux Utils -->
    <dependency>
	<groupId>com.intel.mtwilson.linux</groupId>
	<artifactId>MtWilsonLinuxUtil</artifactId>
	<version>${project.version}</version>
	<type>bin</type>
    </dependency>    
    <dependency>
	<groupId>com.intel.mtwilson.linux</groupId>
	<artifactId>MtWilsonLinuxUtil</artifactId>
	<version>${project.version}</version>
	<type>sh</type>
    </dependency>    
  </dependencies>
 
 
  <build>
      <resources>
          <resource>
              <directory>src/files</directory>
          </resource>
      </resources>
  </build>
 
  <profiles>
      <profile>
          <activation>
              <os>
                  <family>unix</family>
              </os>
          </activation>
  <build>
    <plugins>
        
        
        
       <!-- begin copy artifacts plugin -->
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>copy</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
		  <!-- Java and glassfish -->
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>java</artifactId>
                  <version>1.6.0_29</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>glassfish</artifactId>
                  <version>3.1.1</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <!-- Monit -->
                <artifactItem>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>monit</artifactId>
                    <version>5.5</version>
                    <type>bin</type>
                    <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
		<!-- Web services -->
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>PrivacyCAService</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>ManagementService</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>WLMService</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>AttestationService</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
		<!-- other -->
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>MtWilsonLinuxUtil</artifactId>
                  <version>${project.version}</version>
                  <type>sh</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                  <destFileName>functions</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>MtWilsonLinuxUtil</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
		<!-- UI portals -->
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>WhiteListPortal</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>ManagementConsole</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.intel.mtwilson.linux</groupId>
                  <artifactId>TrustDashBoard</artifactId>
                  <version>${project.version}</version>
                  <type>bin</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                <!-- setup console --> 
                <artifactItem>
                  <groupId>com.intel.mtwilson.desktop</groupId>
                  <artifactId>setup-console</artifactId>
                  <classifier>with-dependencies</classifier>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
		<!-- api client -->
                <artifactItem>
                  <groupId>com.intel.mtwilson.integration</groupId>
                  <artifactId>api-client</artifactId>
                  <version>${project.version}</version>
                  <type>zip</type>
                  <outputDirectory>${makeself.directory}</outputDirectory>
                </artifactItem>
                
              </artifactItems>
              <!--<outputDirectory>${project.build.directory}/wars</outputDirectory>-->
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>	
      <!-- end copy artifacts plugin -->

      <!-- begin copy other resources plugin -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.5</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${makeself.directory}</outputDirectory>
		<resources>
		    <resource>
			<directory>src/files</directory>
			<includes>
			    <include>**/*</include>
			</includes>
			<filtering>false</filtering>
		    </resource>
		</resources>
            </configuration>            
          </execution>
        </executions>
      </plugin>
      <!-- end copy other resources plugin -->

      <!-- begin create self-extracting installer plugin -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>create-single-installer</id>
	    <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
	    <configuration>
	    <executable>bash</executable>
	    <arguments>
		<argument>makebin-auto.sh</argument>
		<argument>${makeself.directory}</argument>
	    </arguments>
	    </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- end create self-extracting installer plugin -->
      <!-- begin deploy installers to repository -->
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
        </plugin>
      <!-- end deploy installers to repository -->
    </plugins>

<pluginManagement>
    <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>1.5</version>
            <executions>                      
                <execution>
                    <id>attach-artifacts</id>
                    <phase>package</phase>
                    <goals>
                        <goal>attach-artifact</goal>
                    </goals>
                    <configuration>
                        <artifacts>
                            <artifact>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.bin</file>
                                <type>bin</type>
                            </artifact>
                        </artifacts>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</pluginManagement>
  
  
  </build>
      </profile>
  </profiles>

</project>
