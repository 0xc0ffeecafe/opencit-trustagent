    <artifactId>asset-tag-dao-jooq</artifactId>
    <packaging>jar</packaging>
    <name>Asset Tag DAO JOOQ</name>
    <description>Asset Tag and Provisioning Service Data Access Objects implemented using JOOQ</description>
